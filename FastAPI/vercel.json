{
    "version": 2,
    "builds": [
      {
        "src": "main.py",
        "use": "@now/python"
      }
    ],
    "functions": {
        "api": {
          "runtime": "python3.9"
        }
      },
    "routes": [
      {
        "src": "/transactions/(.*)",
        "dest": "/main.py"
      },
      {
        "src": "/(.*)",
        "status": 404,
        "dest": "/404.html"
      }
    ]
  }
  